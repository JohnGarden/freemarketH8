extends layout

block append head
  link(rel='stylesheet', href='/stylesheets/shoplist.css')

block append content
  #holder
    .wrapper
      .list-group
        each shop, i in shoplist
          a.list-group-item(href="/shops/#{shop.name}")
            | #{shop.name}
            span.badge #{shop.name.length}

    #footer
      button.new-shop(type='button')
        | Nova Loja
        p
